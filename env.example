# Firebase Client Configuration (Required for client-side Firebase)
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Firebase Admin Configuration (Required for server-side Firebase)
# Generate this from Firebase Console > Project Settings > Service Accounts
# Convert the JSON to base64: base64 -i service-account-key.json
GOOGLE_SERVICE_ACCOUNT_BASE64=your_base64_encoded_service_account_json

# Email Configuration (Optional - for sending reservation confirmations)
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Base URL for your application (Required for redirects)
BASE_URL=http://localhost:3000